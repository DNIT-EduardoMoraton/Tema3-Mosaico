<Window x:Class="Tema3_Mosaico.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema3_Mosaico"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400" Icon="assets/dzone_logo_square_webtreatsetc.ico">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Height="80" Background="Purple"></TextBlock>
        <TextBlock DockPanel.Dock="Left" Width="80" Background="Purple"></TextBlock>
        <TextBlock DockPanel.Dock="Right" Width="80" Background="Green"></TextBlock>
        <TextBlock DockPanel.Dock="Bottom" Height="80"  Background="Green"></TextBlock>

        <TextBlock DockPanel.Dock="Left" Width="80"  Background="Orange"></TextBlock>
        <TextBlock DockPanel.Dock="Bottom" Height="80"  Background="Orange"></TextBlock>

        <TextBlock DockPanel.Dock="Top" Height="80" Background="Magenta"></TextBlock>
        <TextBlock DockPanel.Dock="Right" Width="80" Background="Magenta"></TextBlock>

        <TextBlock Background="Black"></TextBlock>
    </DockPanel>
</Window>
